%h1 All users

.users-list
  - @users.each do |user|
    %div{:class => current_user.admin? ? "user-by-admin" : "user"}
      = link_to gravatar_for(user), user
      = link_to user.name, user
      - if current_user.admin?
        = link_to "删除", user, method: :delete, data: { confirm: "确定要删除？"}

= paginate @users, window: 2
